#!/bin/bash
[ "$UTILISE_APPACHE" = "1" ] && . $HOME/HTML/recharger_env
# Met en forme les variables passes par le script cgi
# Sur midi, il ne faut pas gsub("%28","\(",$0); sinon il affiche \(
# Sur midi, il ne faut pas gsub("%29","\)",$0); sinon il affiche \)
args=`echo $1 | $TRUST_Awk -F"&" -v err=$TRUST_TMP/err -v q="\'" '{gsub("%3A",":",$0);gsub("%5B","[",$0); \
gsub("%5D","]",$0);gsub("%2C",",",$0); gsub("%2B","+",$0); \
gsub("%2F","\/",$0);gsub("%27",q,$0);gsub("%28","(",$0); \
gsub("%29",")",$0);gsub("%40","\@",$0); gsub("=","==",$0);gsub("%3D","=",$0);t=err;print $0 > t; \
n=split($0,a,"&");for (i=1;i<n+1;i++) {gsub("==","=\"",a[i]);print a[i]"\""}}'`
eval $args
