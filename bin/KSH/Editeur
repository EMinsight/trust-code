#!/bin/bash
# Argument $1 : nom complet du fichier a editer
NOM=`cat $1`

if [ ! -f $NOM ]
then
   Erreur.ihm "$1 est un fichier inexistant."
else
   if [ "`basename $NOM .lml`" != "`basename $NOM `" ]
   then
      # Fichier lml que l'on edite avec Run_DV !
      cd `dirname $NOM`
      $Xterm $HautGauche_geometrie -title "Postraiter" -e Run_DV `basename $NOM`
   else
      # Fichier edite par defaut par $TRUST_EDITOR !
      nohup $TRUST_EDITOR $NOM 1>/dev/null 2>/dev/null &
   fi
fi
sleep 3
