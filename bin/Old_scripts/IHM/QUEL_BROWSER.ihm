#!/bin/bash
# $1 : nom du fichier cree temporairement par le browser
# et qui va devenir sa signature (les quatre dernieres lettres)
#echo $1
#signature=`echo $1 | $TRUST_Awk '{print substr($0,length($0)-3,4)}'`
#echo $signature
nom=`echo $WEBBROWSER | $TRUST_Awk '{print $1}'`
nom=`basename $nom`
# Pour supporter Mozilla :
[ $nom = mozilla ] && nom=netscape
# Pour supporter FireFox :
[ $nom = firefox ] || [ $nom = mozilla-firefox ] && nom=netscape
echo $nom
