####################
# Recherche des Copy from device
if [ "$TRUST_USE_OPENMP" = 1 ]
then
   NP=1 && [ ${1#PAR} != $1 ] && NP=2
   TRUST_CLOCK_ON=1 trust $1 $NP 1>$1.out_err 2>&1 
   awk -v NP=$NP '/Copy from device/ && /detected/ && ($(NF-4)>1000) {n+=1} END {print n/10/NP" copyFromDevice per time step ! See "FILENAME}' $1.out_err
fi

#####################################
# Comparaison non regression des .out
#####################################
message()
{
   [ $1 != $2 ] && echo $ECHO_OPTS "Error ($1!=$2) when checking:\n $msg" && err=1
   #echo $msg
}
err=0
for file in `ls *.ref`
do
   msg="compare_sonde $file ${file%.ref}"
   eval $msg 1>verifie.log 2>&1
   message $? 0
done
exit $err 
