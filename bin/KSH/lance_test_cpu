#!/bin/bash
if [ ${#1} = 0 ]
then
   file=$TRUST_ROOT/exec/.tests_TRUST$COMM"_opt"
   i=200
   err=0
   while [ $err = 0 ]
   do
      let i=$i+1
      rm -f $TRUST_TMP/test
      cleartool get -to $TRUST_TMP/test $file@@/main/$i 2>/dev/null
      err=$?
      [ $err = 0 ] && lance_test_cpu $TRUST_TMP/test
   done
else
   $TRUST_Awk -F'|' '/s\|/ {gsub("\\.","",$4);gsub("s","",$4);CPU+=$4;i++} END {if (i!=0) print i" test cases run in "CPU" s ( "1+int(CPU/i)" s/test), so less than "1+int(CPU/3600)" hours"}' $1
fi
