{
  "$schema": "http://json-schema.org/schema#",
  "id": "trust_schemas:solid_pb.json",
  "title": "Solid problem",
  "description": "Data required for a solid problem",

  "type": "object",
  "properties": 
    { 
      "solid_pb":
        {
         "type": "object",
         "title": "", 
         "properties": 
            {
             "domain": { "$ref": "trust_schemas:domain.json#", "gui_order": 10 },
             "medium":  { "$ref": "trust_schemas:medium.json#/definitions/solid" , "gui_order": 20 },
             "init_cond":
                {
                  "type": "object",
                  "title": "Initial conditions",
                  "gui_order": 30, 
                  "properties": 
                  {
                    "temperature":   { "$ref": "trust_schemas:equations.json#/definitions/temperature" }
                   }
                },
              "bound_cond": 
                { 
                  "type": "array",
                  "title": "Boundary conditions",
                  "gui_order": 40,
                  "items": { "$ref": "trust_schemas:bc_solid.json#/definitions/bc" }
                }           
            },
         "required": ["domain", "medium","init_cond","bound_cond"]
        }
    },
  "required": ["solid_pb"]
}
