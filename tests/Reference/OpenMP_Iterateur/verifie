####################
# Recherche des Copy from device
if [ "$TRUST_USE_OPENMP" = 1 ] && [ ! -f PAR_$1.dt_ev ]
then
   TRUST_CLOCK_ON=1 trust $1 2>&1 | tee $1.out_err | awk '/Copy from device/ && /detected/ && ($(NF-4)>1000) {n+=1;print $0} END {print n/10" copyFromDevice per time step !"}'
fi

#####################################
# Comparaison non regression des .out
#####################################
message()
{
   [ $1 != $2 ] && echo $ECHO_OPTS "Error ($1!=$2) when checking:\n $msg" && err=1
   #echo $msg
}
err=0
for file in `ls *.ref`
do
   msg="compare_sonde $file ${file%.ref}"
   eval $msg 1>verifie.log 2>&1
   message $? 0
done
exit $err
