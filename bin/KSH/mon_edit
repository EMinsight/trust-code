#!/bin/bash
nom=$1
# Cas des fichiers de l'atelier
# qui ont File pour reperer leur nom en-tete
# et Directory pour reperer le repertoire ou ils sont places
nom_fic=`$TRUST_Awk '/File/ {File=$NF} END {print File}' $nom` 
nomfichier=$rep_dev/$nom_fic

# Edition d'un fichier de l'atelier
if [ -f $nomfichier ]
then
   nohup $EDITEUR $nomfichier 1>/dev/null 2>/dev/null &
else
   Erreur.ihm "$nomfichier est inexistant !!!"
fi
sleep 15
