# Conduction 1D : une barre horizontale faite de deux materiaux  #
# PARALLEL OK 4 #
dimension 2

Pb_conduction pb
Domaine dom

# BEGIN MESH #
Lire_MED {
    domain dom
    file domain_2D.med
}
Read_file dom_ssz.geo ;
trianguler_h dom
# END MESH #

# BEGIN PARTITION
Partition dom
{
    Partition_tool tranche { tranches 2 1 }
    Larg_joint 1
    zones_name DOM
}
End
END PARTITION #

# BEGIN SCATTER
Scatter DOM.Zones dom
END SCATTER #

VEFPreP1B dis

Scheme_euler_implicit sch
Read sch
{
    tinit 0
    seuil_statio 1e-2
    facsec_max 100
    facsec 10
    solveur implicite { solveur gmres { diag seuil 1e-20 nb_it_max 3 } }
}

/*

Scheme_euler_explicit sch
Read sch
{
	tinit 0
	tmax 100.
	dt_min 0.00001
	dt_max 0.1
	dt_impr 0.00001
	dt_sauv 100
	seuil_statio 1e-2
}  */

Associate pb dom
Associate pb sch
Discretize pb dis

Read pb
{

    solide {
        rho       Champ_uniforme  1 1.0
        lambda    Champ_uniforme  1 3.0
        Cp        Champ_uniforme  1 1.0
    }

    Conduction
    {
        diffusion { }
        initial_conditions {
            temperature Champ_Uniforme 1  5.0
        }
        sources {  }
        boundary_conditions {
            Haut   paroi_adiabatique
            Bas    paroi_adiabatique
            Gauche paroi_temperature_imposee       Champ_Front_Uniforme 1 0.0
            Droit  paroi_echange_externe_impose   # si si, Externe .... #
            h_imp champ_front_uniforme 1 2.0
            T_ext champ_front_uniforme 1 10.0
        }
    }

    Post_processing
    {
        probes {
            sonde_horiz nodes temperature periode 1. segment 21 -1.0 0.1 1.0 0.1   # aux centres des faces ... oupa? #
        }
        format lata
        fields dt_post 1.0
        {
            temperature faces
        }
    }


}

Solve pb
End
