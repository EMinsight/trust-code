#!/bin/bash
echo "Tcl/Tk utilise: "$TRUST_WISH
[ ${#DISPLAY} = 0 ] && export DISPLAY=":0"
[ ! -f "$TRUST_WISH" ]  && echo "Tck/Tk is not available on your computer. You cannot use Xprepro." && exit
DIR=`dirname $0`
DIR=`(cd $DIR; pwd)`
if [ "$1" != "" ]
then
   dir=`dirname $1`
   file=`basename $1`
   cd $dir
   exec $TRUST_WISH $DIR/xprepro.tcl $file $2
else
   exec $TRUST_WISH $DIR/xprepro.tcl
fi
#wait $!
