#!/bin/bash
# Cree un repertoire sous $TRUST_FTP s'il n'existe pas :
# Argument $1 nom du repertoire
nom=${1%.}
nom=${nom%/}
if [ "`existe_ftp $nom`" != 1 ]
then
   dir=`dirname $nom`
   rep=`basename $nom`
   echo "  $nom on $TRUST_FTP is created"
   p="" && [ "`ftp -help 2>&1 | grep '\-p'`" != "" ] && p=p # Passive mode utile sur les machines virtuelles

   cat << ! | ftp -iv$p | $TRUST_Awk '/MKD command/ || /File exists/ {print $0}'
open $TRUST_FTP
cd ../..
cd $dir
mkdir $rep
chmod 755 $rep
!

else
   echo "  $nom on $TRUST_FTP already exists"
fi

