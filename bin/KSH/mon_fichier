#!/bin/bash
# Recupere le fichier provenant du browser :
FICHIER=`head -1 $1 | $TRUST_Awk '{print $2}'`
REP=`basename $FICHIER .data`
REP=`basename $REP .geom`
REP=`basename $REP .geo`

name=$TRUST_TESTS/Reference/$REP/$FICHIER
[ "$DIPHA_ROOT" != "" ] && name=$DIPHA_ROOT/Jeu_de_donnees/$REP/$FICHIER
# find . -follow n'existe pas sur IBM !!!
follow="-follow" && [ $TRUST_ARCH = RS6000 ] && follow=""
if [ -f $name ]
then
   FICHIER=$name
else
   FICHIER=`find $TRUST_TESTS/Reference $follow -name $FICHIER -print`
fi
ETUDE_TRUST=`QUELLE_ETUDE.ihm`
export ETUDE_TRUST
$Xterm -title "Copier" -e copie_fichier.ihm $FICHIER 2>/dev/null
# Execute le fichier d'ordre pour edition fichier...
execute.ksh
