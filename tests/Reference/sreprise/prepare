jdd=`pwd`
jdd=`basename $jdd`
# Creation d'un calcul de t=0 a t=0.2 pour une reprise de t=0.2 a t=1.2
cp -f $jdd.data sauve.data
sed -i "s?tinit 0.2?tinit 0.?g" sauve.data
sed -i "s?tmax 1.2?tmax 0.2?g" sauve.data
sed -i "s?reprise ?sauvegarde ?g" sauve.data

rm -f *out *son
if [ "$TRUST_DISABLE_MPI" != 1 ]
then
   trust sauve || exit -1
   make_PAR.data sauve
   sed -i "s?sreprise?PAR_sreprise?g" PAR_sauve.data
   trust PAR_sauve 2 || exit -1
else
   trust sauve || exit -1
fi

# On renomme certains fichiers
for file in *out *son
do
   new_file=`echo $file | awk '{gsub("sauve","sreprise",$0);print $0}'`
   mv $file $new_file
done
